<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatarGanadorHistorial"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_avatar_astronauta" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textPlaylistHistorial"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="@color/amarillito"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textNumRondasHistorial"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="TextView"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textGanadorHistorial"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="TextView"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textFechaHistorial"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="right"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>