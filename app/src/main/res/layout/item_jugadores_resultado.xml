<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconoJugador"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_avatar_astronauta" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/nombreJugadorResultado"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:textColor="@color/amarillito"
                android:textSize="24sp" />

                <TextView
                    android:id="@+id/puntosJugadorResultado"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textAcertadas"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textColor="@color/white" />

            </LinearLayout>
    </LinearLayout>

</LinearLayout>